checkLetter(char letter) {
        boolean found = false;
        for (int i = 0; i < targetWord.length(); i++) {
            if (Character.toLowerCase(targetWord.charAt(i)) == Character.toLowerCase(letter)) {
                guessedWord[i] = targetWord.charAt(i);  // Beibehalten des ursprÃ¼nglichen Formats
                found = true;
            }
        }
        updateFeedback(found, letter);
    }






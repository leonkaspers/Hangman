
letterInputField = new JTextField(10);
    JButton checkLetterButton = new JButton("");
       ActionListener checkLetterAction = new ActionListener() {
                @Override
                public void actionPerformed(ActionEvent e) {

    feedbackArea = new JTextArea();
    feedbackArea.setEditable(false);

    checkLetterButton.addActionListener(new ActionListener() {
        @Override
        public void actionPerformed(ActionEvent e) {
            String input = letterInputField.getText();
            if (input.length() == 1) {
                char letter = input.charAt(0);
                checkLetter(letter);
            } else {
                JOptionPane.showMessageDialog(null, "Please enter a single letter.");
            }
            letterInputField.setText("");
        }
    });

    JPanel inputPanel = new JPanel();
    inputPanel.add(new JLabel("Enter a letter:"));
    inputPanel.add(letterInputField);
    inputPanel.add(checkLetterButton);

    add(inputPanel, BorderLayout.NORTH);
    add(new JScrollPane(feedbackArea), BorderLayout.CENTER);




















checkLetter(char letter) {
        boolean found = false;
        for (int i = 0; i < targetWord.length(); i++) {
            if (Character.toLowerCase(targetWord.charAt(i)) == Character.toLowerCase(letter)) {
                guessedWord[i] = targetWord.charAt(i);  // Beibehalten des ursprÃ¼nglichen Formats
                found = true;
            }
        }
        updateFeedback(found, letter);
    }





